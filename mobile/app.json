{
  "expo": {
    "name": "Reading Nook",
    "slug": "reading-nook",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0B"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.campersurfer.save",
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to unlock Nook and access your saved articles securely."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0A0B"
      },
      "package": "com.campersurfer.save",
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-apple-authentication",
      "expo-local-authentication"
    ],
    "extra": {
      "eas": {
        "projectId": "7e6fa4e8-439f-45ac-af84-391c1a050c13"
      }
    }
  }
}
